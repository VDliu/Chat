<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp" >

    <TextView
        android:id="@+id/tv_chatTime_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/frenchgrey"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chatTime_r"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_r_imgFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/sendfailed"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:background="@drawable/balloon_r" >

            <ImageView
                android:id="@+id/iv_img_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:maxHeight="350dp"
                android:maxWidth="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/zf_default_message_image" />

            <ProgressBar
                android:id="@+id/pb_img_r"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </FrameLayout>

        <ImageView
            android:id="@+id/ivh_img_r"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="top"
            android:layout_marginLeft="2dp"
            android:background="@drawable/all_avatar_user_default"
            android:scaleType="centerCrop"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>